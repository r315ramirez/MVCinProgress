	/**
	 * Contenu de la page d'accueil
	 * @access public
	 * @return void
	 */
	
	
		public function AfficheListePhotos3D($aListePhotos3D){
		      
        ?>
				
			<div class="container">
				<div class='card-deck'>
		
		<?php
	
			
		if(!empty($aListePhotos3D))
		{
			
			foreach ($aListePhotos3D as $cle => $aListe3d) {
				if($aListe3d != ""){		
				
	  			echo "<div class ='card'>";
				
				// echo "<img class='card-img-top' src='". $aListe3d['lienPhoto3D']."'>";
				echo "<p class='card-text'>'".$aListe3d["lienPhoto3"]."'";
				echo "<p class='card-text'>'".$aListe3d["nomPhoto3"]."'";
	    			
				}
					echo "</div>";
				echo "</div>";
	
			}    

		}
        
        ?>
        
                </div>
            </div>    
                    
        <?php    
            
    }
				
